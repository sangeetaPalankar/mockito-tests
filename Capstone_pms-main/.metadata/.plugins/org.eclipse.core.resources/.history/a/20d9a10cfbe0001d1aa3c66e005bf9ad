@Test
public void update() throws AppointmentServiceException {
	Appointment appointment2=new Appointment(2,"abcd","xyz","fever","14-03-2023","Accepted",1,"abcd","xyz","miss","xyz@gmail.com","10-03-2023");
	when(appointmentRepository.save(appointment2)).thenReturn(appointment2);
	when(appointmentServiceImpl.update(appointment2)).thenReturn(appointment2);
	assertEquals(appointment2,appointmentServiceImpl.update(appointment2));

}

